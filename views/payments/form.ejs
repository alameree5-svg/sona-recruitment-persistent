<%- include('../partials/header') %><div class='card'><form method='POST' action='<%= action %>'><div class='row'><div class='col'><label>التاريخ</label><input name='date' type='datetime-local'></div><div class='col'><label>طريقة الدفع</label><select name='method'><option value='cash'>نقداً</option><option value='card'>بطاقة</option><option value='bank'>تحويل بنكي</option><option value='other'>أخرى</option></select></div><div class='col'><label>الصافي</label><input name='amount_net' type='number' step='0.01' required oninput='recalc()'></div><div class='col'><label>الضريبة %</label><input name='vat_rate' id='vat_rate' type='number' step='0.1' value='<%= pay.vat_rate %>' oninput='recalc()'></div><div class='col'><label>الضريبة</label><input id='vat_amount' type='number' step='0.01' readonly></div><div class='col'><label>الإجمالي</label><input id='total_amount' type='number' step='0.01' readonly></div></div><div class='row'><div class='col'><label>نوع العقد</label><select name='contract_type'><option value=''>بدون</option><option value='temp'>مؤقت</option><option value='perm'>دائم</option></select></div><div class='col'><label>ID العقد</label><input name='contract_id' type='number' min='1'></div><div class='col'><label>ملاحظات</label><input name='note'></div></div><div class='row'><button class='btn'>حفظ</button></div></form></div><script>function recalc(){const net=parseFloat(document.querySelector('input[name=amount_net]').value||0);const rate=parseFloat(document.getElementById('vat_rate').value||0);const vat=+(net*rate/100).toFixed(2);const total=+(net+vat).toFixed(2);document.getElementById('vat_amount').value=vat;document.getElementById('total_amount').value=total;}</script><%- include('../partials/footer') %>