<%- include('../partials/header') %><div class='card'><h3>تقارير المبيعات</h3><form class='row' method='GET'><div class='col'><label>من</label><input type='date' name='from' value='<%= filters.from||'' %>'></div><div class='col'><label>إلى</label><input type='date' name='to' value='<%= filters.to||'' %>'></div><div class='col'><label>طريقة الدفع</label><select name='method'><option value='all'>الكل</option><option <%= filters.method==='cash'?'selected':'' %> value='cash'>نقداً</option><option <%= filters.method==='card'?'selected':'' %> value='card'>بطاقة</option><option <%= filters.method==='bank'?'selected':'' %> value='bank'>تحويل</option><option <%= filters.method==='other'?'selected':'' %> value='other'>أخرى</option></select></div><div class='col'><label>الموظف</label><select name='user_id'><option value='all'>الكل</option><% users.forEach(u=>{ %><option value='<%= u.id %>' <%= String(filters.user_id)===String(u.id)?'selected':'' %>><%= u.name||u.username %></option><% }) %></select></div><div class='col' style='align-self:end'><button class='btn'>بحث</button></div></form><hr><table class='table'><thead><tr><th>التاريخ</th><th>الطريقة</th><th>الصافي</th><th>الضريبة</th><th>الإجمالي</th><th>الموظف</th></tr></thead><tbody><% rows.forEach(r=>{ %><tr><td><%= (r.date||'').toString().slice(0,19).replace('T',' ') %></td><td><%= r.method %></td><td><%= (r.amount_net||0).toFixed(2) %></td><td><%= (r.amount_vat||0).toFixed(2) %></td><td><strong><%= (r.amount_total||0).toFixed(2) %></strong></td><td><%= r.user_id %></td></tr><% }) %></tbody></table><div class='row'><div class='col'><div class='card'><div>إجمالي الصافي: <strong><%= agg.net.toFixed(2) %></strong></div><div>إجمالي الضريبة: <strong><%= agg.vat.toFixed(2) %></strong></div><div>الإجمالي الكلي: <strong><%= agg.total.toFixed(2) %></strong></div></div></div></div></div><%- include('../partials/footer') %>